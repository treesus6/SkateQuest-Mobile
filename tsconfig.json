{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react-native",
    "lib": ["ES2015", "ES2020"],
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "types/global.d.ts"],
  "exclude": ["node_modules", ".expo", "coverage", "dist", "android", "ios"]
}
